# TekVwarho ProAudit - Environment Configuration Example
# Copy this file to .env and update values accordingly

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://user:password@localhost:5432/tekvwarho_proaudit
DATABASE_URL_ASYNC=postgresql+asyncpg://user:password@localhost:5432/tekvwarho_proaudit
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=tekvwarho_proaudit

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
APP_NAME=TekVwarho ProAudit
APP_ENV=development
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production
API_VERSION=v1

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# REDIS CONFIGURATION (for caching/sessions)
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# NRS/FIRS E-INVOICING API (Federal Inland Revenue Service)
# ===========================================
# Development / Testing: https://api-dev.i-fis.com
# Production: https://atrs-api.firs.gov.ng
NRS_API_URL=https://api-dev.i-fis.com
NRS_API_URL_PROD=https://atrs-api.firs.gov.ng
NRS_API_KEY=your-firs-api-key
NRS_SANDBOX_MODE=True

# ===========================================
# OCR SERVICE (Azure Form Recognizer)
# ===========================================
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-instance.cognitiveservices.azure.com/
AZURE_FORM_RECOGNIZER_KEY=your-azure-key

# ===========================================
# BANK AGGREGATION APIs (Nigerian Open Banking)
# ===========================================

# Mono API (https://mono.co) - Nigerian Bank Data Aggregation
# Used for: Bank statement fetching, account linking, transaction data
# Get keys from: https://app.withmono.com/
MONO_SECRET_KEY=your-mono-secret-key
MONO_PUBLIC_KEY=your-mono-public-key
MONO_WEBHOOK_SECRET=your-mono-webhook-secret
MONO_SANDBOX_MODE=True
MONO_BASE_URL=https://api.withmono.com

# Okra API (https://okra.ng) - Nigerian Open Banking
# Used for: Bank verification, statements, income, identity
# Get keys from: https://dashboard.okra.ng/
OKRA_SECRET_KEY=your-okra-secret-key
OKRA_CLIENT_TOKEN=your-okra-client-token
OKRA_PUBLIC_KEY=your-okra-public-key
OKRA_WEBHOOK_SECRET=your-okra-webhook-secret
OKRA_SANDBOX_MODE=True
OKRA_BASE_URL=https://api.okra.ng/v2
OKRA_SANDBOX_URL=https://api.okra.ng/v2/sandbox

# Stitch API (https://stitch.money) - Payment Integration
# Used for: Payment initiation, account linking, transactions
# Get keys from: https://stitch.money/
STITCH_CLIENT_ID=your-stitch-client-id
STITCH_CLIENT_SECRET=your-stitch-client-secret
STITCH_WEBHOOK_SECRET=your-stitch-webhook-secret
STITCH_SANDBOX_MODE=True
STITCH_BASE_URL=https://api.stitch.money

# ===========================================
# FILE STORAGE (AWS S3 / Azure Blob)
# ===========================================
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=./uploads
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_BUCKET=tekvwarho-proaudit

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# Email Provider: sendgrid, mailgun, smtp, or mock (for development)
EMAIL_PROVIDER=mock
EMAIL_FROM=noreply@tekvwarho.com
EMAIL_FROM_NAME=TekVwarho ProAudit

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-app-password
SMTP_USE_TLS=True

# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key

# Mailgun Configuration
MAILGUN_API_KEY=your-mailgun-api-key
MAILGUN_DOMAIN=your-mailgun-domain.mailgun.org

# Legacy SMTP (deprecated, use SMTP_* above)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-app-password

# ===========================================
# AZURE BLOB STORAGE
# ===========================================
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER=tekvwarho-proaudit

# ===========================================
# CELERY CONFIGURATION (Background Tasks)
# ===========================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# ===========================================
# SUPER ADMIN CONFIGURATION
# The initial super admin account created on first startup
# IMPORTANT: These MUST be set - no defaults are provided!
# ===========================================
SUPER_ADMIN_EMAIL=your-superadmin@yourdomain.com
SUPER_ADMIN_PASSWORD=YourSecurePassword123!
SUPER_ADMIN_FIRST_NAME=YourFirstName
SUPER_ADMIN_LAST_NAME=YourLastName

# ===========================================
# CORS SETTINGS
# Comma-separated list of allowed origins
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:8000

